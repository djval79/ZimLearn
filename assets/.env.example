# ZimLearn Environment Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the actual .env file to version control

#==============================================================================
# ENVIRONMENT SETTINGS
#==============================================================================
ENVIRONMENT=development                           # development, staging, production
APP_VERSION=1.0.0
BUILD_NUMBER=1

#==============================================================================
# API ENDPOINTS
#==============================================================================
API_URL_DEVELOPMENT=https://dev-api.zimlearn.co.zw
API_URL_STAGING=https://staging-api.zimlearn.co.zw
API_URL_PRODUCTION=https://api.zimlearn.co.zw
CONTENT_CDN_URL=https://cdn.zimlearn.co.zw

#==============================================================================
# FIREBASE CONFIGURATION
#==============================================================================
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID
FIREBASE_MESSAGING_SENDER_ID=YOUR_FIREBASE_SENDER_ID
FIREBASE_PROJECT_ID=zimlearn-app
FIREBASE_STORAGE_BUCKET=zimlearn-app.appspot.com
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

#==============================================================================
# AUTHENTICATION
#==============================================================================
AUTH_TOKEN_EXPIRY_DAYS=30
ENABLE_BIOMETRIC_AUTH=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_GUEST_MODE=true
ADMIN_EMAIL_DOMAIN=zimlearn.co.zw

#==============================================================================
# AI TUTOR CONFIGURATION
#==============================================================================
AI_TUTOR_API_URL=https://ai-tutor.zimlearn.co.zw/api/v1
AI_TUTOR_API_KEY=YOUR_AI_TUTOR_API_KEY
AI_MODEL_VERSION=1.0.0
ENABLE_OFFLINE_AI=true
MAX_AI_TUTOR_MESSAGES_FREE=10
ENABLE_VOICE_INPUT=true
ENABLE_MULTILINGUAL_TUTOR=true

#==============================================================================
# FEATURE FLAGS
#==============================================================================
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_IN_APP_UPDATES=true
ENABLE_BUSINESS_SIMULATION=true
ENABLE_SOCIAL_FEATURES=false
ENABLE_PARENTAL_CONTROLS=true
ENABLE_CONTENT_DOWNLOAD=true
ENABLE_DEBUGGING_TOOLS=true

#==============================================================================
# SUBSCRIPTION & PAYMENTS
#==============================================================================
SUBSCRIPTION_API_URL=https://payments.zimlearn.co.zw/api
SUBSCRIPTION_PUBLIC_KEY=YOUR_SUBSCRIPTION_PUBLIC_KEY
TIER_1_PRICE_USD=1.00
TIER_2_PRICE_USD=2.00
TIER_3_PRICE_USD=3.00
ENABLE_LOCAL_CURRENCY=true
ENABLE_MOBILE_MONEY=true
ENABLE_TRIAL_PERIOD=true
TRIAL_PERIOD_DAYS=7

#==============================================================================
# CONTENT DELIVERY
#==============================================================================
MAX_OFFLINE_STORAGE_MB=500
CONTENT_UPDATE_CHECK_HOURS=24
DEFAULT_VIDEO_QUALITY=medium       # low, medium, high
ENABLE_CONTENT_PREFETCH=true
MAX_CONCURRENT_DOWNLOADS=3

#==============================================================================
# ANALYTICS & MONITORING
#==============================================================================
ANALYTICS_COLLECTION_ENABLED=true
PERFORMANCE_COLLECTION_ENABLED=true
USER_TRACKING_ENABLED=true
ERROR_REPORTING_ENABLED=true
LOG_LEVEL=info                     # debug, info, warning, error

#==============================================================================
# REGIONAL SETTINGS
#==============================================================================
DEFAULT_LANGUAGE=en                # en, sn, nd
DEFAULT_COUNTRY=ZW
CURRICULUM_VERSION=2023
ENABLE_REGIONAL_CONTENT=true
TIMEZONE=Africa/Harare

#==============================================================================
# DEVELOPMENT TOOLS
#==============================================================================
ENABLE_MOCK_DATA=true
SKIP_INTRO=false
AUTO_LOGIN=false
TEST_USER_EMAIL=test@zimlearn.co.zw
TEST_USER_PASSWORD=test_password_123
ENABLE_NETWORK_LOGGING=true
ENABLE_BLOC_LOGGING=true
